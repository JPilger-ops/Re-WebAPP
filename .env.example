# Used by docker-compose for image tagging/substitution
APP_VERSION=1.0.0

# DB defaults (used by docker-compose and Prisma)
DB_HOST=db
DB_PORT=5432
DB_USER=rechnung_app
DB_PASS=change_me
DB_NAME=rechnung_prod
DB_SCHEMA=public
DATABASE_URL=postgresql://${DB_USER}:${DB_PASS}@${DB_HOST}:${DB_PORT}/${DB_NAME}?schema=${DB_SCHEMA}
DB_DATA_PATH=./data/db

# Host binding for app (forwarded by proxy):
# Container hört intern auf 3030; Host-Port 3031 wird in docker-compose gemappt.
APP_HOST=0.0.0.0
APP_PORT=3030
# Default 0.0.0.0 (CI/local). Auf dem Server auf die Host-IP setzen, z.B. 192.200.255.225.
APP_BIND_IP=0.0.0.0
APP_PUBLIC_PORT=3031
APP_DATA_HOST_PATH=./data/app
APP_DATA_PATH=/app/data
BACKUP_LOCAL_PATH=/app/data/backups
# Set to 1 to allow in-container NFS auto-mount (requires docker-compose.nfs.yml).
ALLOW_NFS_MOUNT=0
# Set to 1 to enable HKForms mock endpoints (dev/test only).
HKFORMS_MOCK_ENABLE=0

# Persistent Branding (uploaded logos + favicon)
PUBLIC_LOGOS_PATH=./data/public/logos
PUBLIC_FAVICON_PATH=./backend/public/favicon.ico

# Build metadata (wird von scripts/build-meta.sh automatisch befüllt)
BUILD_SHA=unknown
BUILD_NUMBER=0
BUILD_TIME=unknown
