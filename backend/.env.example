APP_DOMAIN=https://rechnung.intern
APP_HTTPS_PORT=3030
APP_HTTPS_DISABLE=true
CORS_ORIGINS=https://rechnung.intern,http://rechnung.intern
APP_VERSION=1.0.0
HKFORMS_MOCK_ENABLE=0 # Set to 1 to enable HKForms mock endpoints (dev/test only)

# Rate limiting (defaults)
RATE_LIMIT_ENABLED=1
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300
RATE_LIMIT_AUTH_WINDOW_MS=60000
RATE_LIMIT_AUTH_MAX=20

# Auth / Session
JWT_SECRET=change_me_jwt # Must be changed in prod (app refuses to start otherwise)
SESSION_SECRET=change_me_session # Must be changed in prod (app refuses to start otherwise)
APP_PIN=1234
APP_CREATE_PIN=change_me_strong   # In Prod erforderlich, um /auth/register zu erlauben
DEFAULT_ADMIN_PASSWORD=change_me  # Direkt nach Installation aendern
ALLOW_ADMIN_SEED=0 # Set to 1 to allow admin user creation via seed

# Database (must match docker-compose POSTGRES_* values)
DB_HOST=db
DB_PORT=5432
DB_USER=rechnung_app
DB_PASS=change_me
DB_NAME=rechnung_prod
DB_SCHEMA=public
DATABASE_URL=postgresql://rechnung_app:change_me@db:5432/rechnung_prod?schema=public

# SMTP (example values)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=rechnungen@example.com
SMTP_PASS=change_me
MAIL_FROM="RechnungsAPP <rechnungen@example.com>"

# SEPA (example values)
SEPA_CREDITOR_NAME="RechnungsAPP"
SEPA_CREDITOR_IBAN="DE00123456780000000000"
SEPA_CREDITOR_BIC="ABCDEFGHXXX"

# TLS in-app (only needed if APP_HTTPS_DISABLE=false)
APP_SSL_CERT_DIR=/app/certificates/rechnung.intern
# Alternative:
# APP_SSL_KEY_PATH=/app/certificates/rechnung.intern/privkey.pem
# APP_SSL_CERT_PATH=/app/certificates/rechnung.intern/fullchain.pem
